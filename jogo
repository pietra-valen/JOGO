            ajudadoPorKhonshu = verdadeiro
            escreverLento("Khonshu sorri, aprovando sua decisão.\n")
        } senao {
            escreverLento("Você resiste, mas Khonshu o força. Você sente dor (-10 vida).\n")
            vidaJogador -= 10
        }
        
        
        escolha_personalidade()

 escreva("                                                                                                                                                      \n")
