    funcao inicio() {
    	
        introducao_historia()
        limpa()
        
        jogo_escolhas()
    }

    funcao introducao_historia() {
    	
    escreva("  ____ _____ ___  _______  |  |   ____ |__|______  ____     __| _/____    |  |  __ _______   \n")
    escreva("_/ ___\\\\__  \\\\  \\/ /\\__  \\ |  | _/ __ \\|  \\_  __ \\/  _ \\   / __ |\\__  \\   |  | |  |  \\__  \\  \n")
